{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/modules/nixos/modules/containers/.*/default\\.nix$/"
      ],
      "matchStrings": [
        "default\\s*=\\s*\"(?<depName>.*?):(?<currentValue>[^:\"]+)\";\\s*#\\s*renovate:\\s*docker"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
